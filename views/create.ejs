<html lang="en">
<%- include('../partials/header.ejs') %> 
<body>
    <h1 class="text-left">Node js Blogs</h1>

    <%- include('../partials/menu.ejs') %> 
  

    <div>
        <h2>Create New Blog</h2>
    </div>
  
  
    <hr>

        <div class="window-content p-2">
            <div class="row">
                <div class="cell-4 offset-4"><div>
                    <form>
